{
  "name": "ics-analyzer-desktop",
  "version": "1.0.1",
  "description": "ICS Analyzer - Aplicativo desktop (Windows) empacotado com Electron",
  "main": "main.js",
  "author": "ICS Analyzer Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --config.directories.output=dist_release --dir",
    "dist": "electron-builder --config.directories.output=dist_release"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "br.ufs.icsanalyzer",
    "productName": "ICS Analyzer",
    "directories": {
      "output": "dist_release"
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../docs",
        "to": "docs"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
